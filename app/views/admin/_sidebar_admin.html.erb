<div class="sidebar">
  <div class="mini-submenu">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
  </div>
  <div class="list-group">
      <span href="#" class="list-group-item active">
        ADMIN
        <span class="pull-right" id="slide-submenu">
            <i class="fa fa-times"></i>
        </span>
      </span>
      <a href="<%= films_path %>" class="list-group-item">
        <i class="fa fa-film" aria-hidden="true"></i> Film Manager
        <% if @films %>
          <span class="badge"><%= @films.total_count %></span>
        <% end %>
      </a>
      <a href="<%= schedules_path %>" class="list-group-item">
        <i class="fa fa-calendar" aria-hidden="true"></i> Schedule Manager
      </a>
      <a href="<%= categories_path %>" class="list-group-item">
        <i class="fa fa-database" aria-hidden="true"></i> Category Manager
      </a>
      <a href="<%= orders_path %>" class="list-group-item">
        <i class="fa fa-cart-plus" aria-hidden="true"></i> OrderFilm Manager
      </a>
      <a href="<%= users_path %>" class="list-group-item">
        <i class="fa fa-user-o" aria-hidden="true"></i> User Info Manager
        <% if @users %>
          <span class="badge"><%= @users.total_count %></span>
        <% end %>
      </a>
  </div>
</div>
<script>
  $(function(){

  $('#slide-submenu').on('click',function() {
        $(this).closest('.list-group').fadeOut('slide',function(){
          $('.mini-submenu').fadeIn();
        });

      });

  $('.mini-submenu').on('click',function(){
        $(this).next('.list-group').toggle('slide');
        $('.mini-submenu').hide();
  })
})
</script>
