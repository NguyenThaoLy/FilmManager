<%= link_to t(".back"), categories_url, class: "btn btn-primary glyphicon glyphicon-arrow-left" %>
<h1><%= t(".title") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @category do |f|%>
      <%= render 'shared/error_messages_category' %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %> <br>

       <%= f.submit t(".update"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
