<%= simple_form_for @film do |f| %>
  <%= render "shared/error_messages_film" %>
  <%= f.input :name, required: true %>
  <%= f.input :actor %>
  <%= f.input :duration %>
  <%= f.input :time %>
  <%= f.input :directors %>
  <%= f.input :detail %>
  <%= f.input :status, collection: 1..2 %>
  <%= f.input :poster %>
  <%= f.input :trailer %>
  <%= f.input :category_id, collection: Category.order(:name) %>
  <%= f.button :submit, class: "btn-primary" %>
<% end %>
