<%= simple_form_for @film do |f| %>
  <%= render "shared/error_messages_film" %>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :name, required: true %>
    </div>
    <div class="col-md-6">
      <%= f.input :actor %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :duration %>
    </div>
    <div class="col-md-6">
      <%= f.input :time %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :directors %>
    </div>
    <div class="col-md-6">
      <%= f.input :status, collection: 1..2 %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= f.input :poster, accept: "image/jpeg,image/gif,image/png" %>
    </div>
    <div class="col-md-4">
      <%= f.input :trailer %>
    </div>
    <div class="col-md-4">
      <%= f.input :category_id, collection: Category.order(:name) %>
    </div>
  </div>
  <%= f.text_area :detail, placeholder: true, id: "markdown" %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= f.button :submit, class: "btn-primary" %>
    </div>
  </div>
<% end %>
<script>
  $(document).ready(function() {
    var simplemde = new SimpleMDE({ element: document.getElementById("markdown") });
  });
</script>
