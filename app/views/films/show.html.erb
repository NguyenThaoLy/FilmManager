<div id="detail_film">
  <div class="row">
    <% if @film %>
      <div class="img-detail col-md-4">
        <%= link_to image_tag(@film.poster) %>
      </div>
      <div class="content-detail col-md-8">
        <h3><%= @film.name %></h3>
        <p><STRONG><%= t".time" %></STRONG><%= @film.time%><%= t".minutes" %></p>
        <p><STRONG><%= t".director" %></STRONG><%= @film.directors %></p>
        <p><strong><%= t".actor" %></strong><%= @film.actor %></p>
        <STRONG><%= t".content" %></STRONG>
        <p><%= @film.detail %></p>
        <STRONG><%= t".rate" %></STRONG>
        <p>
          <i class="fa fa-star fa-lg" aria-hidden="true"></i>
          <i class="fa fa-star fa-lg" aria-hidden="true"></i>
          <i class="fa fa-star fa-lg" aria-hidden="true"></i>
          <i class="fa fa-star fa-lg" aria-hidden="true"></i>
          <i class="fa fa-star-half-o fa-lg" aria-hidden="true"></i>
          <i class="fa fa-star-o fa-lg" aria-hidden="true"></i>
          <i class="fa fa-star-o fa-lg" aria-hidden="true"></i>
          <i class="fa fa-star-o fa-lg" aria-hidden="true"></i>
          <i class="fa fa-star-o fa-lg" aria-hidden="true"></i>
          <i class="fa fa-star-o fa-lg" aria-hidden="true"></i>
        </p>
        <a href="#" data-toggle="modal" data-target="#myModal"><button class="btn btn-primary">Booking</button></a>
        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
          <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4><%= t ".select_time" %></h4>
              </div>
              <div class="modal-body">
                <h3><%= @film.name %></h3>
                <ul class="nav nav-tabs">
                  <% @arr.each do |date| %>
                    <li>
                      <a href="#<%= date %>" data-toggle="tab"><h4><%= I18n.l date, format: Settings.films.format_ngay %></h4></a>
                    </li>
                  <% end %>
                </ul>
                <div class="tab-content clearfix">
                  <% @arr.each do |date| %>
                    <div class="tab-pane fade" id="<%= date %>" >
                      <% Schedule.find_time_by_date(@film.id, date).each do |id, time| %>
                        <div class="film col-md-3">
                          <%= hidden_field :schedule_id, value: id %>
                          <%= link_to (I18n.l time, format: Settings.films.format_gio), order_path(id: id), class: "btn btn-primary" %> <br>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="comment clearfix">
      <div class="lfload">
        <span>
          <span class="countC"><%= t ".comment"%></span>
        </span>
      </div>
      <div class="rfload">
        <div>
          <span class="pub">
            <%= t ".sort"%>
          </span>
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              Oldest <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Oldest", "#" %></li>
              <li><%= link_to "Newest", "#" %></li>
            </ul>
          </div>
      </div>
    </div>
  </div>
  <div class="clear-both"></div>
  <div class="row" id="form-review">
    <% if user_signed_in? %>
      <%= form_for @reviews do |r|%>
        <%= r.text_area :content, placeholder: t(".placeholder"), class: "form-control", :rows => "3" %>
        <%= r.hidden_field :film_id, value: @film.id, class: "form-control" %>
        <%= r.submit t(".post"), class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>
  <div class="row" id="reviewUser">
    <%= render "comment" %>
  </div>
</div>
