<header id="header">
  <div class="container-fluid">
    <div class="row">
      <div class="menu">
        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
          <div class="logo">
            <%= link_to image_tag("logo.png", alt: "logo.png"), '/assets/images' %>
          </div>
        </div>
        <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
          <div class="menu-top">
            <nav>
              <ul>
                <li><%= link_to t(".movie"), root_path %></li>
                <li><%= link_to t(".movie_schu"), scheduleFilm_path %></li>
                <li><%= link_to t(".fake"), priceTicket_path %></li>
                <% if logged_in? && !current_user.try(:admin?) %>
                  <li><%= @current_user.username %></li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      Account <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to t(".profile"), current_user %></li>
                    <li><%= link_to t(".settings"), '#' %></li>
                      <li class="divider"></li>
                     <li><%= link_to t("logout"), logout_path, method: :delete %></li>
                    </ul>
                  </li>
                <% elsif current_user.try(:admin?) %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      <%= @current_user.username %> <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Film", films_path %></li>
                      <li><%= link_to "Schedule", schedules_path %></li>
                      <li><%= link_to "Category", categories_path %></li>
                      <li><%= link_to "OrderFilm", orders_path %></li>
                      <li><%= link_to "User Info", users_path %></li>
                    </ul>
                  </li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      Account <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Profile", current_user %></li>
                      <li><%= link_to "Settings", '#' %></li>
                      <li class="divider"></li>
                      <li><%= link_to "Log out", logout_path, method: :delete %></li>
                    </ul>
                  </li>
                <% else %>
                  <li><%= link_to t(".registration"), signup_path %></li>
                  <li><%= link_to t(".login"), login_path %></li>
                <% end %>
              </ul>
            </nav>
          </div>
        </div>
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
          <div class="search-new">
            <%= link_to image_tag("new-offer-vn.png", alt: "new-offer-vn"), '/assets/images' %>
          </div>
          <div class="search">
            <%= form_tag search_results_path, method: :get do %>
              <div class="search-box">
                <div class="filter">
                  <%= text_field_tag :term, params["term"], id: "filter-autocomplete-search" %>
                </div>
                <div class="sub">
                  <%= submit_tag "search"%>
                </div>
              </div>
            <% end %>
            </form>
          </div>
          </div>
          <div class="search-booking">
            <%= link_to image_tag("icon-mua-ve_ngay.png", alt: "icon-mua-ve_ngay.png"), '/assets/images' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header><!-- /header -->
