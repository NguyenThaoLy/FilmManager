<header id="header">
  <div class="container-fluid">
    <div class="row">
      <div class="menu">
        <div class="container">
          <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
            <div class="logo">
              <%= link_to image_tag("logo.png", alt: "logo.png"), '/' %>
            </div>
          </div>
          <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
            <div class="menu-top">
              <nav>
                <ul>
                  <% if user_signed_in? && !current_user.try(:admin?) %>
                    <li><%= link_to t(".movie"), root_path %></li>
                    <li><%= link_to t(".movie_schu"), scheduleFilm_path %></li>
                    <li><%= link_to t(".fake"), priceTicket_path %></li>
                    <li><%= current_user.username %></li>
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Account <b class="caret"></b>
                      </a>
                      <ul class="dropdown-menu">
                        <li><%= link_to t(".profile"), current_user %></li>
                        <li><%= link_to t(".settings"), edit_user_registration_path %></li>
                        <li class="divider"></li>
                        <li><%= link_to t("logout"), destroy_user_session_path, method: :delete %></li>
                      </ul>
                      <li><i class="fa fa-shopping-cart" aria-hidden="true"></i><%= link_to "CART", cart_path%><li>
                  <% elsif current_user.try(:admin?) %>
                    <li><%= link_to current_user.username, films_url %></li>
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Account <b class="caret"></b>
                      </a>
                      <ul class="dropdown-menu">
                      <li><%= link_to t(".profile"), current_user %></li>
                      <li><%= link_to t(".settings"), edit_user_registration_path %></li>
                        <li class="divider"></li>
                      <li><%= link_to t("logout"), destroy_user_session_path, method: :delete %></li>
                      </ul>
                    </li>
                  <% else %>
                    <li><%= link_to t(".movie"), root_path %></li>
                    <li><%= link_to t(".movie_schu"), scheduleFilm_path %></li>
                    <li><%= link_to t(".fake"), priceTicket_path %></li>
                    <li><%= link_to t(".registration"), new_user_registration_path %></li>
                    <li><%= link_to t(".login"), new_user_session_path %></li>
                  <% end %>
                </ul>
              </nav>
            </div>
          </div>
          <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
            <div class="search-new">
              <%= link_to image_tag("new-offer-vn.png", alt: "new-offer-vn"), '/' %>
            </div>
            <div id="search">
              <%= render "searches/search" %>
            </div>
            <div class="search-booking">
              <%= link_to image_tag("icon-mua-ve_ngay.png", alt: "icon-mua-ve_ngay.png"), '/' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header><!-- /header -->
