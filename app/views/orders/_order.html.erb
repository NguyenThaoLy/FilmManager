<div class="row" style="margin-top: 5%">
  <div class="col-md-2">
    <%= render "admin/sidebar_admin" %>
  </div>
  <div class="col-md-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="container">
          <div class="col-md-2">
            <h3>OrderFilm</h3>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <table class="table table-hover table-bordered">
          <thead>
            <tr class="table-title">
              <th><%= t ".name_id" %></th>
              <th><%= t ".name" %></th>
              <th><%= t ".amount" %></th>
              <th><%= t ".schedule_date" %></th>
              <th><%= t ".schedule_time" %></th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |f| %>
            <tr>
                <td><%= f.user_id %></td>
                <td><%= f.user.username %></td>
                <td><%= f.amount %></td>
                <td><%= f.schedule.date  %></td>
                <td><%= I18n.l f.schedule.time, format: Settings.orders.format %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
         <%= paginate @orders,remote: true, :theme => "twitter-bootstrap-3" %>
      </div>
    </div>
  </div>
</div>
