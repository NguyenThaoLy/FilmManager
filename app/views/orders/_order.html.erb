<div class="row" style="margin-top: 5%">
  <div class="col-md-2">
    <%= render "admin/sidebar_admin" %>
  </div>
  <div class="col-md-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="container">
          <div class="col-md-2">
            <h4>OrderFilm</h4>
          </div>
          <div id="searchform" class="col-md-7 col-md-offset-2">
            <%= render "searchform" %>
          </div>
        </div>
      </div>
      <div class="panel-body">
      <%= form_tag delete_multiple_orders_path, method: :delete do %>
        <table class="table table-hover table-bordered">
          <thead>
            <tr class="table-title">
              <th></th>
              <th><%= t ".name_id" %></th>
              <th><%= t ".name" %></th>
              <th><%= t ".name_film" %></th>
              <th><%= t ".amount" %></th>
              <th><%= t ".schedule_date" %></th>
              <th><%= t ".schedule_time" %></th>
              <th>Status</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |f| %>
            <tr>
              <td><%= check_box_tag "orders_ids[]", f.id %></td>
              <td><%= f.user_id %></td>
              <td><%= f.user.username %></td>
              <td><%= f.schedule.film.name %></td>
              <td><%= f.amount %></td>
              <td><%= f.schedule.date  %></td>
              <td><%= I18n.l f.schedule.time, format: Settings.orders.format %></td>
              <td><%= f.status %></td>
              <td>
                <% if current_user.try :admin? %>
                    <%= link_to "", f, method: :delete, data: {confirm: t(".sure")}, class: "btn btn-danger glyphicon glyphicon-trash" %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row">
          <div class="col-md-2">
            <%= submit_tag "Delete_all_checked", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
         <%= paginate @orders,remote: true, :theme => "twitter-bootstrap-3" %>
      </div>
    </div>
  </div>
</div>
