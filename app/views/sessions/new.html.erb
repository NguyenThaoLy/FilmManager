<% provide :title, t(".login") %>
<h1><%= t ".login" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(:session, url: login_path) do |f| %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.button :submit, class: 'btn-primary' %>
    <% end %>
    <p><%= t ".newuser" %> <%= link_to t(".signup"), signup_path %></p>
  </div>
</div>
