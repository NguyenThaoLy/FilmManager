<div class="row" style="margin-top: 5%">
  <div class="col-md-2">
    <%= render "admin/sidebar_admin" %>
  </div>
  <div class="col-md-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="container">
          <div class="col-md-2">
            <h3>User Manager</h3>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <table class="table table-hover table-bordered">
          <thead>
            <tr class="table-title">
              <th><%= t ".username" %></th>
              <th><%= t ".sex" %></th>
              <th><%= t ".email" %></th>
              <th><%= t ".address" %></th>
              <th><%= t ".phone" %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |f| %>
            <tr>
              <td><%= f.username %></td>
              <td><%= f.sex %></td>
              <td><%= f.email %></td>
              <td><%= f.address %></td>
              <td><%= f.phone %></td>
              <td>
                <% if current_user.try :admin? %>
                  <%= link_to "", f, method: :delete, data: {confirm: t(".sure")}, class: "btn btn-danger glyphicon glyphicon-trash" %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @users,remote: true, :theme => "twitter-bootstrap-3" %>
      </div>
    </div>
  </div>
</div>
